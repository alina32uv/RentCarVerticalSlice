@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
<section class="hero pb-3 bg-cover bg-center d-flex align-items-center" style="background: url('/img/carw.jpg')">
    <div class="container py-5">
        <div class="row px-4 px-lg-5">
            <div class="col-lg-4">
                    <h1 class="h2 text-uppercase mb-3" style="color:white; font-size:55px;">Drive Your Dreams</h1>

            </div>
        </div>
    </div>
</section>
 @if (!User.IsInRole("Admin"))
                        {
    <section class="pt-5">
        <header class="text-center">
            <p class="small text-muted small text-uppercase mb-1">Expertly chosen cars</p>
            <h2 class="h5 text-uppercase mb-4">Browse our categories</h2>
        </header>
        <div class="row">
            <div class="col-md-4">
               <a class="category-item" asp-area="" asp-controller="Car" asp-action="Index" asp-route-carBodyType="SportCar">
                    <img class="img-fluid" src="img/sport.jpg" alt="" />
                    <strong class="category-item-title">Sport Car</strong>
                </a>
            </div>
            <div class="col-md-4">
                <a class="category-item" asp-area="" asp-controller="Car" asp-action="Index" asp-route-carBodyType="Sedan">
                    <img class="img-fluid" src="img/sedan.jpg" alt="" />
                    <strong class="category-item-title">Sedan</strong>
                </a>
              
                <a class="category-item" asp-area="" asp-controller="Car" asp-action="Index" asp-route-carBodyType="Minivan">
                    <img style="margin-top:32px;" class="img-fluid" src="img/minivan.png" alt="" />
                    <strong class="category-item-title">Mnivan</strong>
                </a>
            </div>
            <div class="col-md-4">
                <a class="category-item" asp-area="" asp-controller="Car" asp-action="Index" asp-route-carBodyType="Coupe">
                    <img class="img-fluid" src="img/coupe.png" alt="" />
                    <strong class="category-item-title">Coupe</strong>
                </a>
            </div>
        </div>
        </section>
    }
    else
    {
        <section class="pt-5">
            <header class="text-center">
                <p class="small text-muted small text-uppercase mb-1">Expertly chosen cars</p>
                <h2 class="h5 text-uppercase mb-4">Browse our categories</h2>
            </header>
            <div class="row">
                <div class="col-md-4">
                    <a class="category-item" asp-area="" asp-controller="Car" asp-action="IndexToUpdate" asp-route-carBodyType="SportCar">
                        <img class="img-fluid" src="img/sport.jpg" alt="" />
                        <strong class="category-item-title">Sport Car</strong>
                    </a>
                </div>
                <div class="col-md-4">
                    <a class="category-item" asp-area="" asp-controller="Car" asp-action="IndexToUpdate" asp-route-carBodyType="Sedan">
                        <img class="img-fluid" src="img/sedan.jpg" alt="" />
                        <strong class="category-item-title">Sedan</strong>
                    </a>

                    <a class="category-item" asp-area="" asp-controller="Car" asp-action="IndexToUpdate" asp-route-carBodyType="Minivan">
                        <img style="margin-top:32px;" class="img-fluid" src="img/minivan.png" alt="" />
                        <strong class="category-item-title">Mnivan</strong>
                    </a>
                </div>
                <div class="col-md-4">
                    <a class="category-item" asp-area="" asp-controller="Car" asp-action="IndexToUpdate" asp-route-carBodyType="Coupe">
                        <img class="img-fluid" src="img/coupe.png" alt="" />
                        <strong class="category-item-title">Coupe</strong>
                    </a>
                </div>
            </div>
        </section>
        
    }




</div>

<script>
    function sortCars(event) {
        event.preventDefault();
        var carBodyType = event.currentTarget.getAttribute("data-car-body-type");
        location.href = '/Car/IndexToUpdate?carBodyType=' + encodeURIComponent(carBodyType);
    }
</script>

