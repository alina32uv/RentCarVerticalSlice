@using CarApp.Pages.Brands
@model List<Brand>

<div class="container p-3" >
        <div class="row pt-4">
<div class="col-6" >
            <h2 class="text-primary"> Brand List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Rand" asp-action="Create" class ="btn btn-primary">
                <i class="bi bi-plus-circle"></i>

                Create a new Brand

            </a>

        </div>
    </div>
</div>
<div >
<table class="table table-hover table-bordered table-striped align-middle" style="width:100%;  color:#465265">
    <thead >
        <tr >
            <th scope="col" style="color:#272C42; font-weight:1000">Id</th>
            <th scope="col" style="color:#272C42;">Brand Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
{
        <tr>
           
            <td style="width:50%">@brand.BrandId</td>
                <td style="width:50%">@brand.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Rand" asp-action="Update" asp-route-id="@brand.BrandId" class="btn btn-outline-light"
                          >
                            
                            <i class="bi bi-pencil-square"></i>
                            Edit</a>

                        <a asp-controller="Rand" asp-action="Delete" asp-route-id="@brand.BrandId" class="btn btn-outline-danger" 
                           >

                            <i class="bi bi-trash3-fill"></i>
                            Delete
                        </a>
                    </div>
                    </td>

            </tr>
}
    </tbody>

</table>
</div>